<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile_picture_change"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guide_line_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/guideline_50"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guide_line_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/guideline_10"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guide_line_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/guideline_40"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guide_line_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/guideline_70"/>

    <TextView
        android:id="@+id/changeImageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/elige_imagen"
        android:textColor="?attr/colorPrimary"
        android:gravity="center"
        android:textSize="@dimen/profile_picture_text_size_big"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guide_line_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/image1Container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/profile_picture_card_corner_radius"
        app:cardElevation="@dimen/profile_picture_card_elevation"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guide_line_2"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guide_line_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guide_line_1">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="@dimen/profile_picture_layout_width"
            android:layout_height="@dimen/profile_picture_layout_height"
            android:layout_gravity="center"
            android:scaleX="@dimen/guideline_70"
            android:scaleY="@dimen/guideline_70"
            android:src="@drawable/alejandria_logo"
            app:tint="?attr/colorPrimary"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/image2Container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/profile_picture_card_corner_radius"
        app:cardElevation="@dimen/profile_picture_card_elevation"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guide_line_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vertical_guide_line_1"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guide_line_1">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="@dimen/profile_picture_layout_width"
            android:layout_height="@dimen/profile_picture_layout_height"
            android:layout_gravity="center"
            android:scaleX="@dimen/guideline_70"
            android:scaleY="@dimen/guideline_70"
            android:src="@drawable/ic_profile"
            app:tint="?attr/colorPrimary"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/image3Container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/profile_picture_card_corner_radius"
        app:cardElevation="@dimen/profile_picture_card_elevation"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guide_line_3"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guide_line_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guide_line_2">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="@dimen/profile_picture_layout_width"
            android:layout_height="@dimen/profile_picture_layout_height"
            android:layout_gravity="center"
            android:scaleX="@dimen/guideline_70"
            android:scaleY="@dimen/guideline_70"
            android:src="@drawable/ic_menu_book"
            app:tint="?attr/colorPrimary" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/image4Container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/profile_picture_card_corner_radius"
        app:cardElevation="@dimen/profile_picture_card_elevation"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guide_line_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vertical_guide_line_1"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guide_line_2">

        <ImageView
            android:id="@+id/image4"
            android:layout_width="@dimen/profile_picture_layout_width"
            android:layout_height="@dimen/profile_picture_layout_height"
            android:layout_gravity="center"
            android:scaleX="@dimen/guideline_70"
            android:scaleY="@dimen/guideline_70"
            android:src="@drawable/ic_book"
            app:tint="?attr/colorPrimary" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/image5Container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/profile_picture_card_corner_radius"
        app:cardElevation="@dimen/profile_picture_card_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guide_line_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guide_line_3">

        <ImageView
            android:id="@+id/image5"
            android:layout_width="@dimen/profile_picture_layout_width"
            android:layout_height="@dimen/profile_picture_layout_height"
            android:layout_gravity="center"
            android:scaleX="@dimen/guideline_70"
            android:scaleY="@dimen/guideline_70"
            android:src="@drawable/ic_face"
            app:tint="?attr/colorPrimary" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/image6Container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/profile_picture_card_corner_radius"
        app:cardElevation="@dimen/profile_picture_card_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vertical_guide_line_1"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guide_line_3">

        <ImageView
            android:id="@+id/image6"
            android:layout_width="@dimen/profile_picture_layout_width"
            android:layout_height="@dimen/profile_picture_layout_height"
            android:layout_gravity="center"
            android:scaleX="@dimen/guideline_70"
            android:scaleY="@dimen/guideline_70"
            android:src="@drawable/ic_temple"
            app:tint="?attr/colorPrimary" />
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progress_bar_change_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>